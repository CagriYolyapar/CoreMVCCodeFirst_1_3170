@model GetProductsPageVM

<h3> Yeni ürün eklemek icin  <a asp-controller="Product" asp-action="CreateProduct">tıklayınız</a>   </h3>

<hr />


<table class="table table-hover">
    <thead>
        <tr>
            <th>Urun ID</th>
            <th>Urun Ismi</th>
            <th>Fiyatı</th>
            <th>Kategorisi</th>
            <th>Guncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ProductVM item in Model.Products)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.ProductName</td>
                <td>@item.UnitPrice</td>
                <td>@item.CategoryName</td>
                <td><a asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@item.ID" class="btn btn-warning">Güncelle</a></td>
                <td><a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@item.ID" class="btn btn-danger">Sil</a></td>

            </tr>
        }
    </tbody>
</table>